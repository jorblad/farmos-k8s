{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/^k8s/.*\\.ya?ml$/"
    ]
  },
  "argocd": {
    "managerFilePatterns": [
      "^k8s/.+\\.ya?ml$    "
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^k8s/.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "image:\\s*([^:\\s]+)(?::([^\\s]+))?"
      ],
      "depNameTemplate": "{{match1}}",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker",
      "currentValueTemplate": "{{match2}}"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "kubernetes",
        "custom.regex"
      ],
      "matchDatasources": [
        "docker"
      ],
      "groupName": "k8s-images",
      "automerge": false
    }
  ]
}
